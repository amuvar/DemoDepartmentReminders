@model Reminder

<h2>Create Reminder</h2>

<form asp-action="Create">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="ReminderDateTime"></label>
        <input asp-for="ReminderDateTime" type="datetime-local" />
    </div>
    <button type="submit">Save</button>
</form>
